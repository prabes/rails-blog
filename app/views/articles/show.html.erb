
<h1>Showing selected article</h1>

<p>
  Title: <%= @article.title %>
</p>
  <% if @article.user %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li>Created by: </li>
          <li>
            <%= link_to gravatar_for(@article.user), user_path(@article.user) %> 
          </li>
          <li class="article-title">
            <%=link_to @article.user.username, user_path(@article.user)%>
          </li>
          <li> <small>
            <%= pluralize(@article.user.articles.count,"article") if @article.user.articles%>
          </small> </li>
        </div>
      </div>
    </ul>
  <% end %> 

<p>
  Description: <%= @article.description%>
</p>

<div class= "article-actions">
<% if logged_in? && (current_user == @article.user || current_user.admin?) %>
<%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-xs btn-primary" %>
<%= link_to 'Delete this article', @article, :method => :delete , :data => {:confirm => "You Sure?"},class: "btn btn-xs btn-primary"%>
<%end%>
<%= link_to 'Back to Article Lists', articles_path, class: "btn btn-xs btn-primary" %>
</div>
