<div class="center jumbotron">
  <h1 class="display-4">PRABESH.BLOGS</h1>
  <%= link_to 'SignUp Now',"#", class: "center btn btn-primary btn-lg" %> 
</div>

<h1 align="center"> Listing All Articles</h1>

  <% @article.each do |item|%>
   <div class = "row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to item.title, article_path(item)%>
        </div>
        <div class = "article-body">
          <%= truncate(item.description,length: 500)%> 
        </div>
      <div class="article-actions">
        <%= link_to "Edit this article", edit_article_path(item),class: "btn btn-xs btn-primary"%>
        <%= link_to "Delete this article", article_path(item), method: :delete, data:{confirm:"Are you sure you want to delete the article?"},
                                  class: "btn btn-xs btn-primary"%>



           
      </div>
      </div>
    </div> 
  </div>  
 <%end%>







